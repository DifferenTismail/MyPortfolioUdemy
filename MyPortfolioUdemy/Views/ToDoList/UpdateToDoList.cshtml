@model ToDoList
@{
    ViewData["Title"] = "UpdateToDoList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Yapılacaklar</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Yapılacak İşlem Güncelleme</div>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="ToDoListID"/>

                            <label>Başlığı & İlçe</label>
                            <input type="text" asp-for="Title" class="form-control mb-2" />

                            <label>Tarih</label>
                            <input type="date" asp-for="Date" class="form-control mb-2" />

                            <label>Görsel Yolu</label>
                            <input type="text" asp-for="ImageUrl" class="form-control mb-2" />

                            <button class="btn btn-primary btn-sm">
                                <i class="fas fa-pencil-alt"></i>
                                Yapılacak GÜncelle
                            </button>
                        </form>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

