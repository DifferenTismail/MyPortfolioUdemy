@model Experience
@{
    ViewData["Title"] = "CreateExperience";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Deneyimler</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Yeni Deneyim Ekle</div>
                    </div>
                    <div class="card-body">
                       <form method="post">
                           <label>Deneyim Başlığı & Firma Bilgisi</label>
                            <input type="text" asp-for="Head" class="form-control mb-2" />

                            <label>Firma Bilgisi</label>
                            <input type="text" asp-for="Title" class="form-control mb-2" />

                            <label>Tarih Aralığı</label>
                            <input type="text" asp-for="Date" class="form-control mb-2" />

                            <label>Açıklama</label>
                            <textarea rows="4" asp-for="Description" class="form-control mb-2"></textarea>

                            <button class="btn btn-primary btn-sm">
                                <i class="fas fa-pencil-alt"></i>
                                Deneyim Ekle</button>
                       </form>
                        
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

