@model Message
@{
    ViewData["Title"] = "MessageDetail";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Mesajlar</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Gelen Mesaj Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            <input type="hidden" asp-for="MessageID"/>
                            <b>Gönderen:</b> @Model.NameSurname <br />
                            <b>Email:</b> @Model.Email <br />
                            <b>Tarih:</b> @Model.SendDate.ToShortDateString() <br /> <br />
                            <b>Mesaj:</b> @Model.MessageDetail
                        </div>
                        
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

